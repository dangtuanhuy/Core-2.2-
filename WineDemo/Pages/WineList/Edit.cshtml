@page
@model WineDemo.Pages.WineList.EditModel
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit Wine</h2>
<br />
<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Wine.Id" />
        <div class="container" style="padding:30px">
            <div class="form-group">
                <div class=" row">
                    <div class="col-sm-2">
                        <label asp-for="Wine.CategoryName"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Wine.CategoryName" class="form-control" />
                    </div>
                    <span asp-validation-for="Wine.CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class=" row">
                    <div class="col-sm-2">
                        <label asp-for="Wine.Publisher"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Wine.Publisher" class="form-control" />
                    </div>
                    <span asp-validation-for="Wine.Publisher" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class=" row">
                    <div class="col-sm-2">
                        <label asp-for="Wine.ISBS"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Wine.ISBS" class="form-control" />
                    </div>
                    <span asp-validation-for="Wine.ISBS" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class=" row">
                    <div class="col-sm-2 offset-sm-2">
                        <input type="submit" value="Update" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="Index" class="btn btn-secondary form-control">Back to List </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


